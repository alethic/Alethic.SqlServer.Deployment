<Deployment xmlns="https://cogito.cx/schemas/SqlServer.Deployment/manifest/2020">
    <Parameter Name="SQL_InstanceName" DefaultValue="(localdb)\SQL" />
    <Parameter Name="EFM_InstanceName" DefaultValue="(localdb)\EFM" />
    <Parameter Name="PathToJcmsDacPac" DefaultValue="Cogito.SqlServer.Deployment.Tests.Database.dacpac" />
    <Parameter Name="PathToConversionDacPac" DefaultValue="Cogito.SqlServer.Deployment.Tests.Database.dacpac" />
    <Parameter Name="PathToExchangeDacPac" DefaultValue="Cogito.SqlServer.Deployment.Tests.Database.dacpac" />
    <Target Name="SQL">
        <Instance Name="[SQL_InstanceName]">
            <Install />
            <Configuration Name="clr enabled" Value="1" />
        </Instance>
    </Target>
    <Target Name="EFM">
        <Instance Name="[EFM_InstanceName]">
            <Install />
            <Configuration Name="clr enabled" Value="1" />
        </Instance>
    </Target>
    <Target Name="SQL_TO_EFM">
        <DependsOn Name="SQL" />
        <DependsOn Name="EFM" />
        <Instance Name="[SQL_InstanceName]">
            <LinkedServer Name="NEON" DataSource="[EFM_InstanceName]" />
        </Instance>
    </Target>
    <Target Name="EFM_TO_SQL">
        <DependsOn Name="EFM" />
        <DependsOn Name="SQL" />
        <Instance Name="[EFM_InstanceName]">
            <LinkedServer Name="JCMS" DataSource="[SQL_InstanceName]" />
        </Instance>
    </Target>
    <Target Name="SQL_JCMS">
        <DependsOn Name="SQL" />
        <DependsOn Name="SQL_TO_EFM" />
        <Instance Name="[SQL_InstanceName]">
            <Database Name="JCMS" Owner="sa">
                <Package Source="[PathToJcmsDacPac]">
                    <DeployOptions>
                        <AllowIncompatiblePlatform>true</AllowIncompatiblePlatform>
                    </DeployOptions>
                </Package>
            </Database>
        </Instance>
    </Target>
    <Target Name="SQL_Conversion">
        <DependsOn Name="SQL" />
        <Instance Name="[SQL_InstanceName]">
            <Database Name="Conversion" Owner="sa">
                <Package Source="[PathToConversionDacPac]" />
            </Database>
        </Instance>
    </Target>
    <Target Name="EFM_Exchange">
        <DependsOn Name="EFM" />
        <Instance Name="[EFM_InstanceName]">
            <Database Name="Exchange">
                <Package Source="[PathToExchangeDacPac]" />
            </Database>
        </Instance>
    </Target>
</Deployment>
